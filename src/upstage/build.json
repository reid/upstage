{
    "name": "upstage",
    "builds": {
        "upstage-blank": {
            "config": {
                "requires": [
                    "upstage-slideshow",
                    "plugin"
                ]
            },
            "jsfiles": [
                "blank.js"
            ]
        },
        "upstage-test-pattern": {
            "config": {
                "requires": [
                    "upstage-slideshow",
                    "upstage-test-pattern-css",
                    "plugin",
                    "array-extras"
                ]
            },
            "jsfiles": [
                "test-pattern.js"
            ]
        },
        "upstage-test-pattern-css": {
            "cssfiles": [
                "test-pattern.css"
            ]
        },
        "upstage-controls": {
            "config": {
                "requires": [
                    "upstage-slideshow",
                    "widget",
                    "transition",
                    "node"
                ]
            },
            "jsfiles": [
                "controls.js"
            ]
        },
        "upstage-deck-core": {
            "cssfiles": [
                "deck.core.css"
            ]
        },
        "upstage-deck-crossfade": {
            "cssfiles": [
                "deck.crossfade.css"
            ]
        },
        "upstage-prettify": {
            "config": {
                "requires": [
                    "upstage-prettify-css"
                ]
            },
            "jsfiles": [
                "prettify.js"
            ]
        },
        "upstage-prettify-css": {
            "cssfiles": [
                "prettify.css"
            ]
        },
        "upstage-gesture": {
            "config": {
                "requires": [
                    "upstage-slideshow",
                    "event-move"
                ]
            },
            "jsfiles": [
                "gesture.js"
            ]
        },
        "upstage-keyboard": {
            "config": {
                "requires": [
                    "upstage-slideshow",
                    "base-build",
                    "node",
                    "event"
                ]
            },
            "jsfiles": [
                "keyboard.js"
            ]
        },
        "upstage-l10n": {
            "config": {
                "requires": [
                    "intl"
                ],
                "lang": [
                    "en"
                ]
            },
            "jsfiles": [
                "l10n.js"
            ]
        },
        "upstage-l10n": {
            "config": {
                "requires": [
                    "intl"
                ],
                "lang": [
                    "en"
                ]
            },
            "jsfiles": [
                "l10n.js"
            ]
        },
        "upstage-slideshow": {
            "config": {
                "requires": [
                    "oop",
                    "node",
                    "widget",
                    "base-build"
                ]
            },
            "jsfiles": [
                "slideshow.js"
            ]
        },
        "upstage-text-fill": {
            "config": {
                "requires": [
                    "upstage-slideshow"
                ]
            },
            "jsfiles": [
                "text-fill.js"
            ]
        }
    },
    "rollups": {
        "upstage": {
            "files": [
                "upstage-slideshow",
                "upstage-keyboard",
                "upstage-blank",
                "upstage-gesture",
                "upstage-permalink",
                "upstage-text-fill"
            ],
            "config": {
                "use": [
                    "upstage-slideshow",
                    "upstage-keyboard",
                    "upstage-blank",
                    "upstage-gesture",
                    "upstage-permalink",
                    "upstage-text-fill"
                ]
            }
        }
    }
}
